<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <menuitem id="main_menu" name="Brand Kit" parent="base.menu_administration" sequence="1"/>

        <record id="view_config" model="ir.ui.view">
            <field name="name">Theme settings</field>
            <field name="model">theme_kit.config</field>
            <field name="arch" type="xml">
                <form string="Theme Settings" class="oe_form_configuration">
                    <header>
                        <button string="Apply" type="object" name="execute" class="oe_highlight"/>
                        or
                        <button string="Cancel" type="object" name="cancel" class="oe_link"/>
                    </header>
                    <group string="Colors">
                        <field name="theme_id" class="oe_inline"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="config_action" model="ir.actions.act_window">
            <field name="name">Theme settings</field>
            <field name="res_model">theme_kit.config</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
        </record>
        <menuitem id="config_menu" name="Settings" parent="main_menu" sequence="1" action="config_action"/>

    </data>
</odoo>
